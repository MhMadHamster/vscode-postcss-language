{
    "name": "postcss-language",
    "displayName": "postcss-sugarss-language",
    "description": "postcss and sugarss syntax support extension for VSCode",
    "version": "2.0.1",
    "publisher": "mhmadhamster",
    "icon": "img/icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/MhMadHamster/vscode-postcss-language"
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "compile:server": "tsc -p ./server",
        "compile:client": "tsc -p ./client",
        "compile": "npm run compile:server && npm run compile:client",
        "watch:client": "tsc -p ./client -w",
        "watch:server": "tsc -p ./server -w"
    },
    "keywords": [
        "postcss",
        "sugarss",
        "cssnext",
        "syntax",
        "grammar",
        "language",
        "vscode"
    ],
    "engines": {
        "vscode": "^1.10.0"
    },
    "categories": [
        "Languages"
    ],
    "activationEvents": [
        "onLanguage:postcss"
    ],
    "main": "./client/out/postcssMain",
    "contributes": {
        "languages": [
            {
                "id": "postcss",
                "aliases": [
                    "PostCSS",
                    "postcss"
                ],
                "extensions": [
                    ".pcss",
                    ".postcss"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "sugarss",
                "aliases": [
                    "SugarSS",
                    "sugarss"
                ],
                "extensions": [
                    ".sss"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "postcss",
                "scopeName": "source.css.postcss",
                "path": "./syntaxes/postcss.tmLanguage"
            },
            {
                "language": "sugarss",
                "scopeName": "source.css.postcss.sugarss",
                "path": "./syntaxes/sugarss.tmLanguage"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "PostCSS Configuration",
            "properties": {
                "postcss.validate": {
                    "type": "boolean",
                    "default": true,
                    "description": "Validation for PostCSS files"
                }
            }
        }
    },
    "devDependencies": {
        "@types/node": "7.0.18",
        "typescript": "2.3.2",
        "vscode": "1.1.0"
    },
    "dependencies": {
        "vscode-languageclient": "3.2.1",
        "vscode-nls": "2.0.2"
    }
}